@{
    ViewData["Title"] = "Lista de Sliders";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Sliders</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Crear Nuevo Slider
            </a>
        </div>
    </div>


    <br />
    <br />

    <table id="tblSliders" class="table table-striped tabled-bordered table-hover" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Imagen</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts {
    <script src="~/js/slider.js"></script>
}