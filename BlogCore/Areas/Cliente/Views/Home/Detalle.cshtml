@model BlogCore.Models.Articulo
@{
    ViewData["Title"] = "Detalle Articulo";

    // Convertir la cadena a un objeto DateTime
    DateTime fechaCreacion = DateTime.Parse(Model.FechaCreacion);

    // Formatear la decha como una cadena usando toString con el formato
    string fechaFormateada = fechaCreacion.ToString("dd/MM/yyyy");
}


<br />
<div class="container">
    <div class="card">
        <div class="card-header row">
            <div class="col-12 text-center  text-light">
                <h2 class="text-primary">@Model.Nombre</h2>
            </div>
            <div class="col-12">
                <p class="text-muted ">Fecha: @fechaFormateada</p>
            </div>
        </div>

        <div class="card-body">
            <div class="col-12">
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block col-md-6" />
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver atras</a>
                </div>
            </div>
        </div>
    </div>
</div>
